{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "declaration": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "./dist-src",
    "baseUrl": "src",
    "typeRoots": [
      "node_modules/@types",
      "types",
      "src/types",
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    ".git",
    ".vscode",
    "config",
    "samples"
  ]
}